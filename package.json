{
  "name": "tick",
  "version": "1.0.2",
  "description": "Queue management system.",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "build:client": "turbo run build --filter={apps/client}",
    "build:server": "turbo run build --filter={apps/server}",
    "dev:client": "cd apps/client && yarn dev",
    "dev:server": "turbo run dev --filter={apps/server}",
    "dev": "concurrently \"yarn dev:client\" \"yarn dev:server\""
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "repository": "https://github.com/adpopescu338/electron-ticketing-system",
  "author": "Alexandru Popescu",
  "license": "CC0-1.0",
  "devDependencies": {
    "@types/electron-json-storage": "^4.5.4",
    "@types/express": "^4.17.21",
    "@types/lodash": "^4.14.202",
    "concurrently": "^8.2.2",
    "turbo": "^1.12.4",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "dotenv": "^16.3.2",
    "express": "^4.18.2",
    "lodash": "^4.17.21",
    "socket.io": "^4.7.4",
    "socket.io-client": "^4.7.4",
    "yup": "^1.3.3"
  },
  "main": "dist/src/main.js",
  "build": {
    "appId": "com.alexandrupopescu.tick",
    "productName": "Tick",
    "directories": {
      "output": "build"
    },
    "win": {
      "icon": "client/build/q.ico",
      "target": "portable"
    },
    "mac": {
      "icon": "client/build/q.icns"
    },
    "linux": {
      "icon": "client/build/q.png"
    },
    "files": [
      "apps/server/dist/**/*",
      "apps/client/dist/**/*",
      "!.env"
    ]
  },
  "packageManager": "yarn@1.22.19",
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=7.0.0"
  }
}
