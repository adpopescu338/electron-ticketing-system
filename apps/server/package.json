{
  "name": "server",
  "version": "1.0.0",
  "description": "Queue management system.",
  "private": true,
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "tsc -w",
    "start": "electron ./dist/src/main.js"
  },
  "devDependencies": {
    "@types/electron-json-storage": "^4.5.4",
    "@types/express": "^4.17.21",
    "@types/lodash": "^4.14.202",
    "electron": "^28.1.0",
    "typescript": "^4.8.3",
    "@repo/types": "*",
    "@repo/constants": "*",
    "@repo/validation": "*"
  },
  "dependencies": {
    "dotenv": "^16.3.2",
    "electron-json-storage": "^4.6.0",
    "express": "^4.18.2",
    "lodash": "^4.17.21",
    "socket.io": "^4.7.4",
    "socket.io-client": "^4.7.4",
    "yup": "^1.3.3"
  },
  "main": "dist/src/main.js",
  "build": {
    "appId": "com.alexandrupopescu.tick",
    "productName": "Tick",
    "directories": {
      "output": "build"
    },
    "win": {
      "icon": "client/build/q.ico",
      "target": "portable"
    },
    "mac": {
      "icon": "client/build/q.icns"
    },
    "linux": {
      "icon": "client/build/q.png"
    },
    "files": [
      "dist/**/*",
      "client/build/**/*",
      "!.env"
    ]
  },
  "packageManager": "yarn@1.22.19",
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=7.0.0"
  }
}
